<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.paris8.pro.graphiquegopigo.MainActivity">

    <Button
        android:text="Dessiner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bouton_dessine"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="PAUSE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bouton_pause"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:id="@+id/graph"
        android:layout_height="790px"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Trajectoire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trajectoire"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <!--<ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bouton_pause"
        android:textOff="Pause"
        android:textOn="Continue"
        android:layout_below="@+id/bouton_efface"
        android:layout_alignParentEnd="true"
        android:checked="false" />-->

</RelativeLayout>
